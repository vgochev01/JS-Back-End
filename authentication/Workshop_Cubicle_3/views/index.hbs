<h1>Browser</h1>
<form action="/" method="GET">
  <input type="text" class="search" name="search" placeholder="Search..." value="{{search}}"/>
  <input
    type="number"
    name="from"
    class="difficulty"
    placeholder="Difficulty from..."
    value="{{from}}"
  />
  <span>-</span>
  <input
    type="number"
    name="to"
    class="difficulty"
    placeholder="Difficulty to..."
    value="{{to}}"
  />
  <input type="submit" value="search" />
</form>

{{#if cubes}}
  {{#each cubes}}
    {{> cube}}
  {{/each}}
{{else}}
<span class="emptyMsg">No Cubes in Database &RightArrow; <a href="/products/create">Create</a> the first one!</span>
{{/if}}