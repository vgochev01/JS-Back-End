<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="../static/css/style.css" />
  </head>

  <body>

    <div id="container">

      {{#if errors}}
      <div class="notification errorBox">
        <span>{{errors}}</span>
      </div>
      {{/if}}

      <nav>
        {{#if user}}
          <div class="left-container">
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/hotels/create">Add +</a></li>
            </ul>
          </div>
          <div class="right-container">

            <a href="/profile" class="log-out">{{user.username}}</a>
            <a href="/auth/logout" class="log-out">Logout</a>

          </div>
        {{else}}
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/auth/login">Login</a></li>
            <li><a href="/auth/register">Register</a></li>
          </ul>
        {{/if}}
      </nav>

      {{{body}}}

      <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
    </div>

  </body>

</html>