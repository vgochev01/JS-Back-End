<section id="viewAddhotel">
  <h2>Add new hotel</h2>
  <form action="/hotels/create" method="POST" id="formAddhotel">
    <label for="hotel">Hotel name:</label>
    <input type="text" id="hotel" name="name"  value="{{userInput.name}}" placeholder="Hotel name" />
    <label for="city">City:</label>
    <input type="text" id="city" name="city" value="{{userInput.city}}" placeholder="City" />
    <label for="free-rooms">Free rooms:</label>
    <input
      type="number"
      id="free-rooms"
      name="freeRooms"
      placeholder="Free rooms"
      value="{{userInput.freeRooms}}" 
    />
    <label for="imgUrl">Image:</label>
    <input type="text" id="imgUrl" name="imageUrl" value="{{userInput.imageUrl}}" placeholder="https://" />

    <input type="submit" class="create" value="Add" />
  </form>
</section>