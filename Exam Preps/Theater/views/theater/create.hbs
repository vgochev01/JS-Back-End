<form class="theater-form" action="/plays/create" method="POST">
  <h1>Create Theater</h1>
  <div>
    <label for="title">Theater Title:</label>
    <input type="text" placeholder="Theater name" name="name" value="{{userInput.name}}" />
  </div>
  <div>
    <label for="description">Theater Description:</label>
    <textarea placeholder="Description" name="description">{{userInput.description}}</textarea>
  </div>
  <div>
    <label for="imageUrl">Image url:</label>
    <input type="text" placeholder="Image Url" name="imageUrl" value="{{userInput.imageUrl}}" />
  </div>
  <div class="check">
    <input type="checkbox" name="public" id="check-box" {{#if userInput.public}}checked{{/if}}/>
    <label for="check-box">Public</label>
  </div>
  <button class="btn" type="submit">Submit</button>
</form>