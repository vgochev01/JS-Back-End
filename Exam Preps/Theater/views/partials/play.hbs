{{#with play}}
<div>
  <div class="home-image">
    <img
      src="{{imageUrl}}"
      alt="Card image cap"
    />
  </div>
  <div class="info">
    <h4>{{name}}</h4>
    <div class="info-buttons">
      <a class="btn details" href="/plays/details/{{_id}}">Details</a>
      <span class="likes">0 likes</span>
    </div>
  </div>
</div>
{{/with}}